{
  "name": "g-account-router-ext",
  "version": "1.0.0",
  "description": "Googleサービスのデフォルトアカウントを自動的に切り替えるブラウザ拡張機能",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "build:firefox": "webpack --mode=production && shx cp public/manifest.firefox.json dist/manifest.json",
    "build:chrome": "webpack --mode=production && shx cp public/manifest.chrome.json dist/manifest.json",
    "package:firefox": "npm run build:firefox && cd dist && bestzip ../g-account-router-ext-firefox.zip *",
    "package:chrome": "npm run build:chrome && cd dist && bestzip ../g-account-router-ext-chrome.zip *"
  },
  "keywords": ["google", "account", "router", "gmail", "youtube"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/webextension-polyfill": "^0.12.3",
    "bestzip": "^2.2.1",
    "copy-webpack-plugin": "^13.0.0",
    "install": "^0.13.0",
    "npm": "^11.4.2",
    "shx": "^0.4.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.100.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "webextension-polyfill": "^0.12.0"
  }
}
