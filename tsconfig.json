{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "lib": ["ES2016", "DOM"],
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist_chrome",
    "jsx": "react",
    "types": ["webextension-polyfill"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist_chrome"]
}
